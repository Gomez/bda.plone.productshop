<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      lang="en"
      i18n:domain="bda.plone.productshop">

<body>

  <metal:block fill-slot="main">
    <metal:main define-macro="main">
      <tal:content define="rendered_variant view/rendered_variant;
                           rendered_controls view/rendered_controls">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="view/title">
          Title
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div class="documentDescription" tal:content="view/description">
          Description
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <tal:controls condition="rendered_controls"
                      replace="structure rendered_controls" />

        <div id="content-core">
          <tal:productgroup>

            <tal:variant condition="rendered_variant"
                         replace="structure rendered_variant" />

            <tal:no_variant condition="not:rendered_variant">
              <h1>No Variant added yet</h1>
            </tal:no_variant>

            <div class="visualClear"><!--  --></div>
          </tal:productgroup>
        </div>

        <tal:controls condition="rendered_controls"
                      replace="structure rendered_controls" />

        <div tal:replace="structure provider:plone.belowcontentbody" />

      </tal:content>
    </metal:main>
  </metal:block>

</body>
</html>