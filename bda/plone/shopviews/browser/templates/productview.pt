<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bda.plone.shopviews">

<body>

  <metal:content-core fill-slot="content-core">

    <metal:block define-macro="content-core"
                 tal:define="templateId template/getId;">
      <img src="" alt=""  
           tal:condition="context/image|nothing"
           tal:define="scales context/@@images;
                       scale python:scales.scale('image', 'preview')"
           tal:replace="structure python:scale and scale.tag(css_class='ProductImage') or None" />      
      <!-- the tabs -->
      <ul class="tabs">
        <li tal:condition="context/details">
          <a href="#">Description</a>
        </li>
        <li tal:condition="context/datasheet">
          <a href="#">Specifications</a>
        </li>
      </ul> 
      <!-- tab "panes" -->
      <div class="panes">
        <div tal:content="structure context/details/output" 
             tal:condition="context/details" />
        <div tal:content="structure context/datasheet/output"  
             tal:condition="context/datasheet"/>
      </div>
    </metal:block>

  </metal:content-core>

</body>
</html>